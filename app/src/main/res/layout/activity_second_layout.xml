<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kemooo.exproject.second_layout"
    android:background="@drawable/screen">

    <TextView
        android:text="Pieces Color"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/color"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:layout_above="@+id/colortype"
        android:layout_alignLeft="@+id/woodtype"
        android:layout_alignStart="@+id/woodtype" />

    <Spinner
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/woodtype"
        android:background="@android:drawable/spinner_background"
        android:layout_marginBottom="52dp"
        android:paddingLeft="70dp"
        android:layout_above="@+id/color"
        android:layout_alignLeft="@+id/wood"
        android:layout_alignStart="@+id/wood" />

    <TextView
        android:text="Wood Type "
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:id="@+id/wood"
        android:layout_above="@+id/woodtype"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/button2"
        android:background="@drawable/next"
        android:layout_marginBottom="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/colortype"
        android:layout_alignStart="@+id/colortype" />

    <Spinner
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/colortype"
        android:background="@android:drawable/spinner_background"
        android:layout_marginBottom="36dp"
        android:paddingLeft="70dp"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/color"
        android:layout_alignStart="@+id/color" />
</RelativeLayout>
