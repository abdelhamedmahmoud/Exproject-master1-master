<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kemooo.exproject.first_layout"
    android:background="@drawable/screen">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@color/colorPrimary"
        android:gravity="left|center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp"
        android:text="CATEGORIES"
        android:fontFamily="sans-serif"
        android:textStyle="bold|italic"
        android:textSize="18sp" />

    <Spinner
        android:layout_width="250dp"
        android:id="@+id/category"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:background="@android:drawable/spinner_background"
        android:foregroundGravity="center"
        android:paddingLeft="75dp"
        style="@android:style/Widget.DeviceDefault.Light.Spinner"
        android:layout_height="40dp"
        android:contextClickable="false"
        android:popupBackground="@android:color/background_light"
        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category"
        android:layout_alignLeft="@+id/category"
        android:layout_alignStart="@+id/category"
        android:layout_marginTop="34dp"
        android:id="@+id/textView3"
        android:text="WANTED PRICE"
        android:fontFamily="sans-serif"
        android:textStyle="bold|italic"
        android:textColor="@color/colorPrimary"
        android:gravity="left|center"
        android:textSize="18sp" />

    <TextView
        android:text="REQUIRED SIZE"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4"
        android:fontFamily="sans-serif"
        android:textStyle="bold|italic"
        android:textColor="@color/colorPrimary"
        android:gravity="left|center"
        android:layout_marginTop="34dp"
        android:textSize="18sp" />

    <Spinner
        android:layout_width="250dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:id="@+id/size"
        android:background="@android:drawable/spinner_background"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="85dp"
        android:popupBackground="@android:color/background_light"
        />

    <Spinner
        android:layout_width="250dp"
        android:id="@+id/price"
        android:background="@android:drawable/spinner_background"
        android:layout_height="40dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="5dp"
        android:paddingLeft="75dp"
        android:popupBackground="@android:color/background_light"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/button"
        android:background="@drawable/next"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/size"
        android:layout_alignLeft="@+id/size"
        android:layout_alignStart="@+id/size" />

</RelativeLayout>
